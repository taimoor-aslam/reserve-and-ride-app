<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAECEE"
    android:padding="16dp"
    tools:context=".BookingActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESERVE YOUR SEAT"
        android:textStyle="bold"
        android:textColor="#50c878"
        android:textSize="30dp"
        android:clickable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        android:id="@+id/bookingtxtv1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Asia's largest bus booking platform"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@+id/bookingtxtv1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:clickable="true"
        android:id="@+id/bookingtxtv2"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:drawableLeft="@drawable/goingicon"
        android:hint="GOING FROM"
        android:textStyle="bold"
        android:background="@drawable/square_edittext"
        app:layout_constraintTop_toBottomOf="@id/bookingtxtv2"
        android:focusable="false"
        android:id="@+id/bookingedt1"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:drawableLeft="@drawable/locationicon"
        android:hint="GOING TO"
        android:focusable="false"
        android:textStyle="bold"
        android:background="@drawable/square_edittext"
        app:layout_constraintTop_toBottomOf="@id/bookingedt1"
        android:id="@+id/bookingedt2"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:textStyle="bold"
        android:focusable="false"
        android:drawableLeft="@drawable/busicon"
        android:background="@drawable/square_edittext"
        android:hint="Choose Bus Service"
        android:clickable="true"
        app:layout_constraintTop_toBottomOf="@id/bookingedt2"
        android:id="@+id/bussericeedt"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/square_edittext"
        app:layout_constraintTop_toBottomOf="@+id/bussericeedt"
        android:clickable="true"
        android:editable="false"
        android:drawableLeft="@drawable/datepicker"
        android:hint="DATE"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        android:focusable="false"
        android:id="@+id/bookingedt3"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/bookingedt3"
        android:text="Find Bus"
        android:textColor="#EAECEE"
        android:textStyle="bold"
        android:background="#50c878"
        android:id="@+id/bookingbtn"/>



</androidx.constraintlayout.widget.ConstraintLayout>