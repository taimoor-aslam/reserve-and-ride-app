<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#EAECEE"
    tools:context=".CreateNewAccountVerification">
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/backicon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="#50c878"
        android:id="@+id/backicon"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile Verification"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="#50c878"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/backicon"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/verifcationttxt"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A text message with a 6-digit verification code was sent to your number."
        app:layout_constraintTop_toBottomOf="@+id/verifcationttxt"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/verimessagetxt"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/editicon"
        android:clickable="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/verimessagetxt"
        android:id="@+id/editicon"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit phone number"
        android:textColor="#50c878"
        android:layout_marginLeft="3dp"
        app:layout_constraintTop_toBottomOf="@+id/verimessagetxt"
        app:layout_constraintLeft_toRightOf="@id/editicon"
        android:id="@+id/edtnmbrtxt"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="------"
        android:textStyle="bold"
        android:textSize="20dp"
        android:background="@drawable/square_edt_focused"
        app:layout_constraintBottom_toTopOf="@+id/continuebtn"
        android:id="@+id/codeedt"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CONTINUE"
        android:background="#50c878"
        android:textColor="#EAECEE"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/continuebtn"/>





</androidx.constraintlayout.widget.ConstraintLayout>